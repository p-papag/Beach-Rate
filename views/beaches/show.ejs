<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">BeachRate</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= beach.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">â‚¬<%= beach.price %>/night</h4>
                    <h4><a><%=beach.name%></a></h4>
                    <p><%= beach.description %></p>
                    <p><em> Submitted By <%= beach.author.username %></em></p>
                    <% if (currentUser && beach.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/beaches/<%= beach._id %>/edit">Edit</a>
                        <form class="delete-form" action="/beaches/<%= beach._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/beaches/<%= beach._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% beach.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                            <% if (currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                            href="/beaches/<%= beach._id %>/comments/<%=comment._id%>/edit">Edit</a>
                            <form class="delete-form" action="/beaches/<%= beach._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% }%>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>


<% include ../partials/footer %>